@model Candidate
<div class="display-6">
    Apply
</div>

<form method="post" asp-action="apply">
    <div class="form-group my-2">
        <label>Email:</label>
        <input  name="Email" class="form-control" />
    </div>
    <div class="form-group my-2">
        <label>FirstName:</label>
        <input name="FirstName" class="form-control" />
    </div>
    <div class="form-group my-2">
        <label>LastName:</label>
        <input name="LastName" class="form-control" />
    </div>
    <div class="form-group my-2">
        <label>TcKimlikNo:</label>
        <input name="TcKimlikNo" maxlength="11" pattern="[0-9]{11}"  class="form-control" />
    </div>
    <div class="form-group my-2">
        <label>Age:</label>
       <select class="form-control" name="Age">
            <option value="18">18 </option>
            <option value="19">19 </option>
            <option value="20">20 </option>
            <option value="21">21 </option>
            <option value="22">22 </option>
            <option value="23">23 </option>
            <option value="24">24 </option>
            <option value="25">25 </option>
            <option value="26">26 </option>
            <option value="27">27 </option>
            <option value="28">28 </option>
       </select>
    </div>
    <fieldset>
        <legend>Selelct One Course</legend>
        <p>
            <input id="mvc" type="radio" name="SelectedCourse" value="ASP.NET Core MVC" />
            <label>ASP.NET Core MVC</label>
        </p>
        <p>
            <input id="api" type="radio" name="SelectedCourse" value="ASP.NET Core API" />
            <label>ASP.NET Core API</label>
        </p>
        <p>
            <input id="api" type="radio" name="SelectedCourse" value="C#" />
            <label>C#</label>
        </p>
    </fieldset>
    <div class="btn-group">
        <button class="submit btn btn-primary m-lg-1">Apply</button>
        <a class="btn btn-warning m-lg-1" asp-controller="Home"  asp-action="Index">Home</a>
    </div>
     
    
</form>